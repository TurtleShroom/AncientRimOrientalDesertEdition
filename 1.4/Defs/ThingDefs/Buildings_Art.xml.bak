<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--================================ Obelisk ======================================-->
  <ThingDef ParentName="SculptureBase">
    <defName>AR_ObeliskSmall</defName>
    <label>small obelisk</label>
    <description>A monolithic rectangular pillar that symbolizes a sun ray and with it divine law. This is a quite short one and can be placed under a roof.</description>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <texPath>Buildings/Art/Obelisk/Small</texPath>
      <drawSize>(5,5)</drawSize>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <rotatable>true</rotatable>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>7</Mass>
      <Beauty>100</Beauty>
      <WorkToMake>30000</WorkToMake>
    </statBases>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <recipeMaker>
      <researchPrerequisite>AR_Project_Oriental_Culture</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  <ThingDef ParentName="SculptureBase">
    <defName>AR_ObeliskMedium</defName>
    <label>medium obelisk</label>
    <description>A monolithic rectangular pillar that symbolizes a sun ray and with it divine law. Can't be placed under a roof.</description>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <texPath>Buildings/Art/Obelisk/Medium</texPath>
      <drawSize>(9,9)</drawSize>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <fillPercent>0.5</fillPercent>
    <rotatable>true</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <blockWind>true</blockWind>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <Beauty>240</Beauty>
      <Mass>25</Mass>
      <WorkToMake>65000</WorkToMake>
    </statBases>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>220</costStuffCount>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <recipeMaker>
      <researchPrerequisite>AR_Project_Oriental_Culture</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  <ThingDef ParentName="SculptureBase">
    <defName>AR_ObeliskBig</defName>
    <label>big obelisk</label>
    <description>A monolithic rectangular pillar that symbolizes a sun ray and with it divine law. Can't be placed under a roof.</description>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <texPath>Buildings/Art/Obelisk/Big</texPath>
      <drawSize>(9,9)</drawSize>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <size>(2,2)</size>
    <fillPercent>0.5</fillPercent>
    <rotatable>true</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <blockWind>true</blockWind>
    <statBases>
      <MaxHitPoints>350</MaxHitPoints>
      <Beauty>500</Beauty>
      <Mass>80</Mass>
      <WorkToMake>175000</WorkToMake>
    </statBases>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>480</costStuffCount>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <recipeMaker>
      <researchPrerequisite>AR_Project_Oriental_Culture</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
</Defs>