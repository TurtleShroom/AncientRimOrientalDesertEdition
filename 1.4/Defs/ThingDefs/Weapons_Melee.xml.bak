<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="BaseMeleeWeapon_Orient" Abstract="True" ParentName="BaseWeapon">
    <techLevel>Medieval</techLevel>
    <smeltable>true</smeltable>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>AR_Smithy_Orient</li>
      </recipeUsers>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>WoodLog</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
    <comps>
      <!--li><compClass>CompOversizedWeapon.CompOversizedWeapon</compClass></li-->
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtWeaponMelee</nameMaker>
        <descriptionMaker>ArtDescription_WeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
  </ThingDef>
  <!-- ================================= Swords ================================= -->
  <ThingDef ParentName="BaseMeleeWeapon_Orient">
    <defName>AR_Khopesh</defName>
    <label>kopesh</label>
    <description>A strangely curved sword which is at its concave side sharpened. Unboviosly it's good for both cutting for fencing.</description>
    <graphicData>
      <texPath>Items/Weapons/Khopesh</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>70</costStuffCount>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>11500</WorkToMake>
      <Mass>1</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <weaponTags>
      <li>EgyptianNoble</li>
    </weaponTags>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>16</power>
        <cooldownTime>1.5</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>19</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <recipeMaker>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
