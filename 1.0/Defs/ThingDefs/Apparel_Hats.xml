<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Civil -->
  <ThingDef ParentName="AncientHatMakeableBase">
    <defName>AR_Headscarf</defName>
    <label>egyptian headscarf</label>
    <description>A rectangular piece of cloth worn around the head of common people from the Nile.</description>
    <graphicData>
      <texPath>Items/Apparel/HeadWrapOnMap</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <Mass>0.1</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Heat>0.6</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Items/Apparel/Hats/HeadWrap</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Egyptian</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <recipeMaker>
      <researchPrerequisite>AR_Project_Oriental_Culture</researchPrerequisite>
    </recipeMaker>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>20</weight>
          <only>(1,1,1,1)</only>
        </li>
        <li>
          <weight>5</weight>
          <only>(0.7,0.63,0.2,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
